<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
        "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
    <display-name>publet</display-name>
    <listener>
        <listener-class>org.eknet.publet.web.GitPartitionStarter</listener-class>
    </listener>

    <servlet>
        <servlet-name>publet</servlet-name>
        <servlet-class>org.eknet.publet.web.PubletServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GitHttpServlet</servlet-name>
        <servlet-class>org.eknet.publet.web.GitHttpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>publet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GitHttpServlet</servlet-name>
        <url-pattern>/git/*</url-pattern>
    </servlet-mapping>

</web-app>