<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
        "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <display-name>publet</display-name>

    <servlet>
        <servlet-name>publet</servlet-name>
        <servlet-class>org.eknet.publet.web.PubletServlet</servlet-class>
        <init-param>
            <param-name>publetRoot</param-name>
            <param-value>/home/eike/temp/publet</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>publet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>