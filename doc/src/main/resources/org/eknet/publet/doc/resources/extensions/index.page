---
title: Publet Documentation

--- name:navigationBar pipeline:jade
=include("../_includes/nav.jade")

--- name:content pipeline:jade
=include("../_includes/header.jade")
- import org.eknet.publet.doc.ExtensionDoc
- val docservice = PubletWeb.instance[ExtensionDoc].get
.row
  .span2
    ul.nav.nav-pills.nav-stacked
      li.active
        a(href="#intro" data-toggle="pill")
          i.icon-chevron-right
          | Introduction
      li
        h4 Included Extensions
      - for (key <- docservice.moduleKeys)
        li
          a(href={ "#"+key.toKey} data-toggle="pill")
            i.icon-chevron-right
            =key.toString

  .span10
    .tab-content
      .tab-pane.active#intro
        =include("_intro.jade")
      - for (key <- docservice.moduleKeys)
        .tab-pane(id={key.toKey})
          =include(docservice.pathOf(key))