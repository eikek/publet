-@ var body: String
-@ var title : String = "Welcome"

!!! Basic
html(lang="en")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="description" content="description goes here")
    meta(name="keywords" content="keywords,goes,here")
    meta(name="author" content="Your Name")

    :css
      body, html {
        font-family: 'Myriad Pro', Calibri, Helvetica, Arial, sans-serif;
        color: #373737;
        background: #f8f8f8;
       }
       body, html, table, tr, td, tbody {
        padding:0;
        margin:0;
        vertical-align: top;
      }
      body {
        padding-top: 20px;
      }
      .wrapper { min-width: 762px; width: 762px; margin: 0 auto; }
      #navigation {
        width: 100%; float: left;
        font-family: Helvetica,Verdana,Arial,sans-serif;
        background: black;
        text-align:center; padding: 8px;
        color: #b55;
        font-size: 10pt;
        font-weight: bold;
        position: absolute;
        top: 0px;
        left: 0px;
      }
      #navigation a { color: white; }
      #navigation ul { display: block; margin:0; padding:0; }
      #navigation li { list-style-type: none; display: inline; margin:0 5px 0 5px;}
      #content { width: 100%; float: left; }
      #content .wrapper { min-width: 700px; width: 700px; margin: 0 auto; padding-top: 1em}
      #content div.left {
        float:left;
        width:200px;
        text-align:right;
        font-size: 18pt;
        clear:both;
      }
      #content h1 {
        font-size: 18pt;
      }
      #content div.right {
        float:right;
        width:450px;
        text-align:left;
      }
      #content a {
        color:#4D87C7;
        background:transparent;
        text-decoration:none;
      }
      #content a:active { outline: none; }
      #content a:hover,
      #content a:focus {
        background-color: #4D87C7;
      	color:#fff;
      	text-decoration:none;
      }

    title = title

  body
    #navigation
      .wrapper
        ul
          - if (requestUri.startsWith("/index."))
            li
              span Home
          - else
            li
              a(href={uri("/")}) Home

    #content
      .wrapper
        !~~ body

    #footer
      .wrapper
        br/
