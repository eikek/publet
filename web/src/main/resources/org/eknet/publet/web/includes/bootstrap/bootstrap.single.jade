-@ val body: String
-@ val title : String = "Welcome"
-@ val head: String = null
-@ val highlightTheme: String = PubletWeb.publetSettings("publet.highlightTheme").getOrElse("googlecode")
-@ val searchForSidebar: Boolean = PubletWeb.publetSettings("publet.searchForSidebar").getOrElse("true").toBoolean
-@ val searchForHeadIncludes: Boolean = PubletWeb.publetSettings("publet.searchForHeadIncludes").getOrElse("true").toBoolean
-@ val useHighlightJs: Boolean = PubletWeb.publetSettings("publet.useHighlightJs").getOrElse("true").toBoolean
-@ val footer: String = null
-@ val navigationBar: String = null
- val ctx = PubletWebContext
- val home = ctx.urlOf("/")
- val highlightCss = ctx.urlOf("/publet/highlightjs/styles/"+ highlightTheme +".css")
- import org.eknet.publet.web.Config
!!! 5
html
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    script(type="text/javascript" src={ ctx.urlOf("/publet/jquery/jquery-1.8.2.min.js") })
    script(type="text/javascript" src={ ctx.urlOf("/publet/jquery/jquery.form.js") })

    link(href={ ctx.urlOf("/publet/bootstrap/css/bootstrap.min.css") } rel="stylesheet")
    script(type="text/javascript" src={ ctx.urlOf("/publet/bootstrap/js/bootstrap.min.js") })
    link(href={ ctx.urlOf("/publet/bootstrap/css/bootstrap.custom.css") } rel="stylesheet")

    - if (useHighlightJs)
      script(type="text/javascript" src={ ctx.urlOf("/publet/highlightjs/highlight.pack.js") })
      link(href={ highlightCss } rel="stylesheet")
      :javascript
            hljs.initHighlightingOnLoad();
      - if (highlightTheme == "googlecode")
        :css
          pre code { background: inherit; }

    script(type="text/javascript" src={ ctx.urlOf("/publet/js/publet.js") })
    - if (searchForHeadIncludes)
      =loadHeadIncludes()

    - if (head!=null)
      !~~ head
    title = PubletWeb.publetSettings("applicationName").map(_ + " - ").getOrElse("") + title
  body
    - if (navigationBar != null)
      !~~ navigationBar
    - else
      - val ext = findIncludeExtension("nav")
      - if (ext.isDefined)
        =include("__incl_nav."+ext.get)
    #content.container
      - val ext = if (searchForSidebar) findIncludeExtension("sidebar", false) else None
      - if (ext.isDefined)
        .row
          .span8
            !~~ body
          .span4
            !~~ include("__incl_sidebar."+ext.get)
      - if (ext.isEmpty)
        !~~ body

    - if (footer != null)
      !~~ footer
    - if (footer == null)
      - val ext = findIncludeExtension("footer", false)
      - if (ext.isDefined)
        =include("__incl_footer."+ext.get)